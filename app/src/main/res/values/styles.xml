<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AccentLabel"  parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textColorAccent</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="PhotoViewTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textSize">18dp</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:textColor">@color/textIconColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textIconColor</item>
        <item name="android:textColorSecondary">@color/textIconColor</item>
        <item name="android:background">#55000000</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textSize">18dp</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:textColor">@color/textIconColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textIconColor</item>
        <item name="android:textColorSecondary">@color/textIconColor</item>
        <item name="android:background">@color/barbackground</item>
    </style>

    <style name="DetailActivityToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/textColorAccent</item>
        <item name="android:textSize">18dp</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:background">@color/frameBackgroud</item>
    </style>
    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#5f97f1</item>                                <!-- 배경 -->
        <item name="android:textColorPrimary">@color/colorAccent</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@color/textIconColor</item>     <!-- 탭바 텍스트 -->
        <item name="android:textColor">@color/textIconColor</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ProgressDailogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
